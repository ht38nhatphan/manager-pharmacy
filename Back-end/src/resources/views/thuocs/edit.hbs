<h1> Chỉnh sửa Thuốc </h1>
<br>
<br>
<form method="POST" action="/thuocs/{{thuocs._id}}?_method=PUT">
  <div class="form-group">
    <label for="name"> Thuốc </label>
    <input type="text" name="name"  class="form-control" value="{{thuocs.name}}" id="name"  placeholder="Nhap ten thuoc">
  </div>
  <div class="form-group">
    <label for="price"> Giá </label>
    <input type="number" name="price"  class="form-control" value="{{thuocs.price}}" id="price" placeholder="Nhập giá thuốc">
  </div>
  <div class="form-group">
    <label for="image"> Ảnh </label>
    <input type="text" name="image" class="form-control" value="{{thuocs.image}}" id="image" placeholder="Nhập ảnh">
  </div>
  <button type="submit" class="btn btn-primary"> Lưu lại </button>
</form>